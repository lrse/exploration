# create a robot
pioneer2dx
(
  name "robot1"
  color "red"
  pose [7.5 13.5 0.0 0.0]
  sicklaser( samples 361)# laser_sample_skip 4 )
  watchdog_timeout -1.0
  localization "gps"
  localization_origin [ 0 0 0 0 ]

)




